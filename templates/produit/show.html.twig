{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div style="margin-bottom:20px">
		Pour consulter la liste, cliquer ici
		<a href="{{path("app_produit_index")}}" class="btn btn-primary">Liste des produits</a>
	</div>
	<table align="center" class="table">
		<tr>
			<th>ID</th>
			<td>{{produit.id}}</td>
		</tr>

		<tr>
			<th>Libelle</th>
			<td>{{produit.libelle}}</td>
		</tr>

		<tr>
			<th>Prix</th>
			<td>{{produit.prix}}</td>
		</tr>

		<tr>
			<th>Description</th>
			<td>{{produit.description}}</td>
		</tr>

	</table>
{% endblock %}
