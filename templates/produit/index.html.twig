{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<table align="center" class="table">
		<tr>
			<th>ID</th><th>Libelle</th><th>Prix</th><th>Description</th><th>Show</th><th>Delete</th><th>Update</th>
		</tr>
        {% for produit in produits %}
        <tr>
        <td>{{produit.id}}</td>
        <td>{{produit.libelle}}</td>
        <td>{{produit.prix}}</td>
        <td>{{produit.description}}</td>
        <td>
                    <a href="{{ path('show_produit', {'id': produit.id}) }}" class="btn btn-primary">Show</a>
        </td>
         <td>
                    <a href="#" class="btn btn-danger">Delete</a>
        </td>
          <td>
                    <a href="#" class="btn btn-warning">Update</a>
        </td>
        </tr>
         {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
	</table>
{% endblock %}
